<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeakerSop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SeakerSop.styles.css" asp-append-version="true" />
</head>
<body>
    </style>
   <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="nav-link text-white" asp-area="" asp-controller="MainPage" asp-action="Index">SneakerShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                        <a class="nav-link text-white" asp-area="" asp-controller="ManProduct" asp-action="CatalogManProductView">Man</a>
                    </li>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="MyOrders" asp-action="MyOrdersView">My orders</a>
                    </li>
                    <li class="nav-item ms-auto">
                        <a class="nav-link text-white" asp-area="" asp-controller="Cart" asp-action="CartView">My Cart</a>
                    </li>
                    <li class="nav-item me-0">
                        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="LoginView">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="RegistrationView">Registration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SeakerSop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
