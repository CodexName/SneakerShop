@model SeakerSop.Models.RequisitesUser
<!DOCTYPE html>
<html>
<head>
  <title>Оплата товара</title>
  <style>
    body {
      background-color: #fff;
      color: #000;
      font-family: Arial, sans-serif;
    }
    
    .container {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-group label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }
    
    .form-group input[type="text"], .form-group input[type="number"] {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #000;
      background-color: transparent;
      color: #000;
    }
    
    .form-group input[type="submit"] {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #000;
      color: #fff;
      border: none;
      cursor: pointer;
    }
  </style>
  <script>
    function formatExpiryDate() {
      const expiryDateInput = document.getElementById('expiry-date');
      const inputValue = expiryDateInput.value;
      
      if (inputValue.length === 2 && inputValue.charAt(2) !== '/') {
        expiryDateInput.value = inputValue + '/';
      }
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>Оплата товара</h1>
    <form method="post" asp-controller="Ordering" asp-action="AddDataPayInfo">
      <div class="form-group">
        <label for="card-number">Номер карты:</label>
        <input type="text" id="card-number" asp-for="CardNumber" placeholder="Введите номер карты" required>
        @Html.ValidationMessageFor(x => x.CardNumber)
      </div>
      <div class="form-group">
        <label for="expiry-date">Срок действия:</label>
        <input type="text" id="expiry-date" asp-for="Date" placeholder="ММ/ГГ" required>
        @Html.ValidationMessageFor(x => x.Date)
      </div>
      <div class="form-group">
        <label for="cvv">CVV-код:</label>
        <input type="number" id="cvv" asp-for="CVCode" placeholder="Введите CVV-код" required>
        @Html.ValidationMessageFor(x => x.CVCode)
      </div>
      <div>
          @Html.ValidationMessageFor(x => x.Balance)
      </div>
      <div class="form-group">
        <input type="submit" value="Оплатить">
      </div>
    </form>
  </div>
</body>
</html>
