@{
    Layout = null;
}
@model SeakerSop.Models.User
<link rel="stylesheet" href="/css/RegistrationAndLogin/Registration.css">
<body>
 <div class="container">
    <form method="post" asp-controller="Account" asp-action="Registration">
      <p class="text">
        <label>Name</label>
        <br/>
        <input asp-for="Name" class="input-field" />
         @Html.ValidationMessageFor(x => x.Name)
      </p>
      <p class="text">
        <label>Last Name</label>
        <br/>
        <input asp-for="LastName" class="input-field" />
         @Html.ValidationMessageFor(x => x.LastName)
      </p>
      <p class="text">
        <label>Age</label>
        <br/>
        <input asp-for="Age" class="input-field" />
        @Html.ValidationMessageFor(x => x.Age)
      </p>     
      <p class="text">
        <label>Adress</label>
        <br/>
        <input asp-for="Adress" class="input-field" />
        @Html.ValidationMessageFor(x => x.Adress)
      </p>
      <p class="text">
        <label>Gmail</label>
        <br/>
        <input asp-for="Gmail" class="input-field" />
        @Html.ValidationMessageFor(x => x.Gmail)
      </p>
      <p class="text">
        <label>Password</label>
        <br/>
        <input asp-for="Password" class="input-field" />
         @Html.ValidationMessageFor(x => x.Password)
      </p>
      <p class="text">
        <label>Compare Password</label>
        <br/>
        <input asp-for="ComparePassword" class="input-field" />
        @Html.ValidationMessageFor(x => x.ComparePassword)
      </p>
      <p>
        <input type="submit" value="Submit" class="submit-button" />
      </p>
        <p class="text" id="shop-label">
        Sneakers Shop
      </p>
    </form>
  </div>

</body>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>